extends base.pug

block content
  h4 Edit Video
  form(method="POST")
    input(name="title", placeholder="Video Title", value=video.title, required)
    input(name="description", type="text", minlength=20, placeholder="Video Description", value=video.description, required)
    input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
    input(value="Save" type="submit")