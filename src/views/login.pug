extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placeholder="User name" name="username", type="text", required)
    input(placeholder="Password" name="password", type="password", required)
    input(type="submit", value="Login")
    br
    a(href="https://github.com/login/oauth/authorize?client_id={OAuth페이지에 있던거}") Continue with Github &rarr;

  hr

  div 
    span Don't have an account?
    a(href="/join") Create one now &rarr;